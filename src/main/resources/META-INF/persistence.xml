<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.2">
    <persistence-unit name="projetodaePU" transaction-type="JTA"
                      provider="org.hibernate.jpa.HibernatePersistenceProvider">
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <!-- Regista explicitamente as entidades, se quiseres evitar scanning -->
        <class>dae.projeto.nosso.projetodae.entities.User</class>
        <class>dae.projeto.nosso.projetodae.entities.Tag</class>
        <class>dae.projeto.nosso.projetodae.entities.Publication</class>
        <class>dae.projeto.nosso.projetodae.entities.Rating</class>
        <class>dae.projeto.nosso.projetodae.entities.Activity</class>

        <properties>
            <!-- Ligação JDBC -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DB_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DB_PASS}"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
