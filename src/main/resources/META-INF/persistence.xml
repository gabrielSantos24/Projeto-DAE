<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.2">
    <persistence-unit name="projetodaePU" transaction-type="JTA">
        <jta-data-source>java:/ResearchDS</jta-data-source>
        <!-- Garante que o nome JNDI Ã© igual ao datasource do WildFly -->

        <!-- Regista explicitamente as entidades (opcional se exclude-unlisted-classes = false) -->
        <class>dae.projeto.nosso.projetodae.entities.User</class>
        <class>dae.projeto.nosso.projetodae.entities.Tag</class>
        <class>dae.projeto.nosso.projetodae.entities.Publication</class>
        <class>dae.projeto.nosso.projetodae.entities.Rating</class>
        <class>dae.projeto.nosso.projetodae.entities.Activity</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- Esquema gerado automaticamente conforme pedido (update ou create) -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

            <!-- Dialeto correto para PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Logging e debug -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>